{
  "version": 2,
  "builds": [
    { "src": "website/**", "use": "@vercel/static" },
    { "src": "resources/icons/**", "use": "@vercel/static" },
    { "src": "releases/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/website/index.html" },
    { "source": "/styles.css", "destination": "/website/styles.css" },
    { "source": "/script.js", "destination": "/website/script.js" },
    { "source": "/favicon.svg", "destination": "/website/favicon.svg" },
    { "source": "/assets/(.*)", "destination": "/website/assets/$1" },
    { "source": "/downloads/(.*)", "destination": "/website/downloads/$1" },
    { "source": "/releases/(.*)", "destination": "/website/releases/$1" }
  ],
  "headers": [
    {
      "source": "/assets/icons/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}


